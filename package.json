{
	"name": "express-ts-template",
	"version": "1.0.0",
	"description": "Express Template With OpenApi validation",
	"main": "dist/server.js",
	"author": "OJG",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"dev": "nodemon -r dotenv/config -r tsconfig-paths/register --watch './src/**/*.ts' --exec 'ts-node' ./src/server.ts",
		"start": "TS_NODE_BASEURL=./dist node -r dotenv/config -r tsconfig-paths/register ./dist/server.js",
		"build": "tsc -p tsconfig.prod.json",
		"lint": "eslint lib/**/*.ts",
		"lint-fix": "eslint --fix lib/**/*.ts",
		"pretty": "prettier --write 'lib/**/*.ts'",
		"prepare": "husky install",
		"precommit": "yarn lint-fix && yarn pretty",
		"prepush": "yarn lint"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.2",
		"express-openapi-validator": "^4.13.5",
		"http-errors": "^2.0.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"swagger-ui-express": "^4.3.0",
		"tsconfig-paths": "^3.12.0",
		"winston": "^3.3.3",
		"yamljs": "^0.3.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/http-errors": "^1.8.1",
		"@types/jest": "^27.4.0",
		"@types/jsonwebtoken": "^8.5.6",
		"@types/morgan": "^1.9.3",
		"@types/supertest": "^2.0.11",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/yamljs": "^0.2.31",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"eslint": "^8.6.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-typescript": "^2.5.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"jest": "^27.4.7",
		"prettier": "^2.5.1",
		"supertest": "^6.1.6",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	}
}
